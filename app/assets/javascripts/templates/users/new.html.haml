%div.container
  %h2.text-center {{ 'SIGN_UP' | translate }}
  %flash-message
  %form#sign_up(ng-submit='users.create(registrationForm)' role='form' ng-init="registrationForm = {}")
    %div.form-group
      %label {{ 'EMAIL' | translate }}
      %input.form-control(ng_model='registrationForm.email' required='' type='email' name='email' ) 
    %div.form-group
      %label {{ 'PASSWORD' | translate }}
      %input.form-control(ng_model='registrationForm.password' required='' type='password' name='password' )
    %div.form-group
      %label {{ 'CONFIRM_PASSWORD' | translate }} 
      %input.form-control(ng_model='registrationForm.password_confirmation' required='' type='password' name='password_confirmation' )  
    %div.actions
      %button.btn.btn-success(type='submit') {{ 'SIGN_UP' | translate }}
  %div{ng_include: "'layout/_social.html'"}
  %a.btn.btn-default(ui-sref='sign_in') {{ 'SIGN_IN' | translate }}
